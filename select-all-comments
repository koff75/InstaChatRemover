(async function instagramSelectOnly() {
    // --- CONFIGURATION ---
    // URL : https://www.instagram.com/your_activity/interactions/comments
    const TIME_BETWEEN_CHECKS = 100; // Vitesse de s√©lection

    // Fonction de pause
    const delay = (ms) => new Promise(res => setTimeout(res, ms));

    // Fonction pour trouver un √©l√©ment par son texte (G√®re Anglais et Fran√ßais)
    function getElementByText(textStrings) {
        const xpath = `//*[${textStrings.map(t => `contains(text(), '${t}')`).join(' or ')}]`;
        const result = document.evaluate(xpath, document, null, XPathResult.ORDERED_NODE_SNAPSHOT_TYPE, null);
        let elements = [];
        for (let i = 0; i < result.snapshotLength; i++) {
            let el = result.snapshotItem(i);
            if (el.tagName === 'SPAN' || el.tagName === 'DIV' || el.tagName === 'BUTTON') {
                 elements.push(el);
            }
        }
        return elements;
    }

    console.log(`üöÄ D√âMARRAGE DE LA S√âLECTION UNIQUEMENT`);

    // --- √âTAPE 1 : MODE SELECT ---
    let selectBtns = getElementByText(["Select", "S√©lect."]);
    if (selectBtns.length > 0) {
        try {
            // On v√©rifie si "Cancel" est pr√©sent (signe que c'est d√©j√† actif)
            let cancelBtn = getElementByText(["Cancel", "Annuler"]);
            if (cancelBtn.length === 0) {
                selectBtns[0].click();
                console.log("1Ô∏è‚É£ Bouton 'Select' cliqu√©.");
                await delay(1500);
            } else {
                console.log("‚ÑπÔ∏è Mode s√©lection d√©j√† actif.");
            }
        } catch (e) {
            console.log("‚ÑπÔ∏è Erreur clic Select, on continue.");
        }
    }

    // --- √âTAPE 2 : COCHER LES COMMENTAIRES ---
    // Bas√© sur la structure standard Bloks pour les checkboxes
    const checkboxes = document.querySelectorAll('div[aria-label="Toggle checkbox"]');

    if (checkboxes.length === 0) {
        console.log("üõë Aucun commentaire √† s√©lectionner.");
        return; 
    }

    console.log(`2Ô∏è‚É£ S√©lection de ${checkboxes.length} commentaires...`);
    for (const box of checkboxes) {
        // Optionnel : v√©rification si d√©j√† coch√© (selon le DOM Instagram, parfois n√©cessaire)
        // Pour l'instant, on clique simplement comme dans le script original
        box.click();
        await delay(TIME_BETWEEN_CHECKS);
    }

    console.log("\n‚úÖ TERMINE ! Tous les √©l√©ments visibles ont √©t√© s√©lectionn√©s.");

})();
